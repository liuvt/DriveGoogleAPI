@inherits ProductDisplayBase

@foreach (var item in Products)
{
    @*Kéo theo ảnh, không kéo theo chữ*@
    <div class="col-12 col-md-6 col-lg-3">
        <a href="/product/@item.ProductId">
            @*Thẻ card giúp tạo Item: Hình ảnh, tiêu đề, nội dung*@
            <div class="card">
                <img class="img-thumbnail" src="@item.ProductImage">
                <div class="card-body">
                    <h3 class="card-text">
                        @item.ProductCartDesc
                    </h3>
                    <h5 class="card-title mb-3">
                        @item.ProductName
                    </h5>
                    <h4 class="card-text">
                        <b>@item.ProductPrice.ToString("#,##0 VNĐ")</b>
                    </h4>
                </div>
            </div>
        </a>
    </div>
}
