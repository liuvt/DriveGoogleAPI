@page "/product/{id:int}"
@inherits ProductDetailBase

<PageTitle>AugCenter - @TittleN</PageTitle>

@if (Product == null && ErrorMessage == null)
{
    <LoadingItemDisplay />
}
else if (ErrorMessage != null)
{
    <ErrorMessageDisplay ErrorMS="@ErrorMessage"></ErrorMessageDisplay>
}
else
{
    //border-bottom viền dưới thẻ div container
    //mb-4 sau khi kết thúc thẻ div container khoảng cách cho thẻ mới
    <div class="container border-bottom mb-4">
        <h3 class="mb-5">Thông tin chi tiết sản phẩm</h3>
        <div class="row">
            <div class="col-md-6 mb-4">
                <img class="img-fluid" src="@Product.ProductImage">
            </div>
            <div class="col-md-6">
                <h4 style="color: rgb(177,177,177);">@Product.ProductName</h4>
                <hr class="mb-3" />
                <div class="mb-4">
                    <p><i><b>Thông số kỹ thuật:</b></i></p>
                    <p>
                        @((MarkupString)Product.ProductLongDesc)
                    </p>
                </div>
                <hr class="mb-3" />
                <div class="mb-4">
                    <b style="color: rgb(250, 30, 5); font-size: 20px; float: left;">
                        @Product.ProductPrice.ToString("#,##0 VNĐ")&nbsp;
                    </b>
                    <p style="float: left;font-size: 13px;"><i>
                            (Kho còn: @Product.ProductStock)
                        </i></p>
                </div>
            </div>
        </div>
    </div>
}